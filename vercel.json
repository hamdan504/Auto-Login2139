{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": { 
        "runtime": "python3.9",
        "buildCommand": "pip install -r requirements.txt && playwright install chromium"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "PIP_TARGET": ".pip_target",
    "PYTHONPATH": "/var/task/.pip_target",
    "PLAYWRIGHT_BROWSERS_PATH": "0"
  }
}